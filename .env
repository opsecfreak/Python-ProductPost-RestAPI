###############################################
# Environment configuration for Product Sync CLI
# NEVER commit real secrets. Copy this file locally and edit values.
###############################################

# ---- WooCommerce API ----
# Base URL of your WooCommerce storefront (no trailing slash)
WOO_BASE_URL=https://example.com
WOO_CONSUMER_KEY=ck_replace_me
WOO_CONSUMER_SECRET=cs_replace_me

# Page size for product fetch (max 100 per WooCommerce docs)
WOO_PAGE_SIZE=50

# ---- OpenAI ----
OPENAI_API_KEY=sk_replace_me
# Default model (gpt-4o, gpt-4o-mini, o3-mini, etc.)
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.4
OPENAI_MAX_TOKENS=800

# ---- CSV / Local Data ----
# Output CSV path (created if missing)
OUTPUT_CSV_PATH=./data/products.csv
# Backup copies count to retain (rotated on each enrich run)
CSV_BACKUP_KEEP=3

# ---- Enrichment Guardrails ----
TITLE_MAX_LEN=100
SHORT_DESC_MAX_LEN=200
DESC_MAX_LEN=1200
KEYWORDS_MAX_TOTAL_LEN=200

# ---- Push Control ----
# Set to true ONLY when you want to push local enriched changes back to WooCommerce
ENABLE_PUSH_CHANGES=False

# ---- Logging ----
LOG_LEVEL=INFO

# ---- Misc ----
APP_ENV=development
APP_NAME=ProductSyncCLI

# ---- Reserved / Future ----
# RATE_LIMIT_PER_MIN=30

###############################################
# Notes:
# - Do not quote values unless they contain spaces.
# - Booleans accepted: true/false, 1/0, yes/no.
# - Maintain separate .env files per environment if needed (.env.production, etc.).
# - All *.env* files are gitignored per .gitignore.
###############################################
